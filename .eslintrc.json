{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            
        }
    },
    "plugins": [
        "import"        
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery" : true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "semi-spacing": 2,
        "space-before-blocks": 2,
        "no-unexpected-multiline": 2,
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-console": "off",
        "import/no-unresolved": "error",
        "curly": [
            "error",
            "all"
        ]
    }
}